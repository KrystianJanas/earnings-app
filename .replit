modules = ["nodejs-20", "web", "postgresql-16"]
[agent]
expertMode = true
integrations = ["javascript_database:1.0.0"]

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
BACKEND_PORT = "3001"
JWT_SECRET = "your-super-secret-jwt-key-change-in-production-replit-env"
NODE_ENV = "development"
CORS_ORIGIN = "https://68312681-e6b4-41e2-970d-d0321741a12b-00-276en46szezw6.picard.replit.dev"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start Backend"

[[workflows.workflow]]
name = "Start Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Start Backend"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && npm start"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3002

[[ports]]
localPort = 43257
externalPort = 3000

[[ports]]
localPort = 45315
externalPort = 3003

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "cd backend && node server.js & cd ../frontend && npx vite preview --host 0.0.0.0 --port 5000"]
build = ["bash", "-c", "cd frontend && npm install && npm run build && cd ../backend && npm install"]
